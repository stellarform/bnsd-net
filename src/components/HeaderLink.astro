---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style
	a {
		display: inline-block;
	        text-decoration: none;
	}
	
	    a.active {
	        font-weight: bolder;
	        text-decoration: underline;
	        border: 3px solid black; /* Border for the rounded rectangle */
	        border-radius: 10px; /* Adjust for rounded corners */
	        padding: 10px 20px; /* Adjust padding for the shape size */
	        margin: 5px; /* Optional: adds spacing around the rectangle */
	}
</style>
