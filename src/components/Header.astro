<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 0px 0px rgba(var(--black), 5%);
       		position: sticky;
       		top: 0;
       		width: fill;
        	z-index: 1000;
		justify-content: flex-start;
	}
	h2 {
		font-family: 'Poppins', sans-serif;
		font-weight: 300;
  		text-decoration: none;
 		color: inherit;	
  		font-size: 12pt;
		align-items: center;
		transform: translateY(6px)
	}
	h5 {
		font-family: 'Poppins', sans-serif;
		font-weight: 300;
  		text-decoration: none;
 		color: inherit;	
  		font-size: 12pt;
		align-items: center;
		transform: translateY(6px)
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}
	@media (max-width: 1500px) {
		.social-links {
		}
	}

	.icon-container {
		display: flex;
		justify-content: center; /* Centers horizontally */
		align-items: center; /* Centers vertically */
		gap: 32px; /* Adjust space between icons */
	}
</style>
