---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<head>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
</head>

<head>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">
</head>

<header>
  <nav>
    <div class="social-links">
      <a href="https://stellarform.net" target="_blank">
        <svg viewBox="0 0 32 32" width="24" height="24">
          <path fill="currentColor" d="M27.92,13.81c-4.61-2.79-7.63,1.06-11.92-5-1.68,2.24-3.62,4.28-5.77,6.07,2.2.06,4.33-.84,5.77-2.51h0c3.63,4.17,7.29,1.18,11.18,3.63-4.54,2.76-8.42,6.64-11.18,11.18-1.6-2.8-3.91-5.7-7.46-5.58,3.14,2.89,5.68,6.41,7.46,10.39,3.19-7.16,8.84-12.81,16-16-1.42-.63-2.79-1.37-4.08-2.19M4.08,18.19c4.61,2.79,7.63-1.06,11.92,5,1.68-2.24,3.62-4.28,5.77-6.07-2.2-.06-4.33.84-5.77,2.51h0c-3.63-4.17-7.29-1.18-11.18-3.63,4.54-2.76,8.42-6.64,11.18-11.18,1.6,2.8,3.91,5.7,7.46,5.58C20.32,7.51,17.78,3.99,16,0,12.81,7.16,7.16,12.81,0,16c1.42.63,2.79,1.37,4.08,2.19Z"></path>
        </svg>
      </a>
    </div>

    <div class="link-container">
      <a href="https://stellarform.net/graphic-design" class="nav-link">Graphic Design</a>
      <a href="https://stellarform.net/motion-graphics" class="nav-link">Motion Graphics</a>
      <a href="https://stellarform.net/photo" class="nav-link">Photo</a>
      <a href="https://stellarform.net/video" class="nav-link">Video</a>
      <a href="https://stellarform.net/about" class="nav-link">About</a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 0px 0px rgba(var(--black), 5%);
    position: sticky;
    top: 0;
    width: fill;
    z-index: 1000;
    justify-content: flex-start;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .social-links {
    display: flex;
    align-items: center;
    margin-right: 0.5em;
    transform: translateY(4px)
  }
  .link-container {
    display: flex;
    align-items: right;
    justify-content: flex-end;
    width: 100%;
    transform: translateY(2px)
  }
  .nav-link {
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    font-size: 11pt;
    text-decoration: none;
    color: inherit;
    margin: 0 0.25em;
  }
  .nav-link:hover {
    color: var(--accent); /* Change hover color as needed */
  }
  .regular-font-section {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 12pt;
    color: #333;
    margin-top: 2em;
  }
  .regular-font-section p {
    margin: 0;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
</style>
